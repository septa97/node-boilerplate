{
  "name": "node-boilerplate",
  "version": "1.0.0",
  "description": "Node.js Boilerplate",
  "main": "server.js",
  "scripts": {
    "create": "node --require dotenv/config --require babel-register scripts/create.js",
    "cm": "git-cz",
    "precommit": "npm run test",
    "commitmsg": "validate-commit-msg",
    "test": "cross-env NODE_ENV=testing nyc --reporter=html --reporter=text tape --require dotenv/config --require babel-register --require babel-polyfill src/api/**/*.tests.js | faucet",
    "coverage": "nyc report --reporter=lcov > coverage.lcov && codecov",
    "clean:doc:api": "rimraf docs/api/ && mkdirp docs/api/",
    "clean:doc": "run-s clean:doc:*",
    "clean:server": "rimraf dist/ && mkdirp dist/",
    "clean": "run-p clean:*",
    "build:doc:api": "npm run clean:doc:api && apidoc -i src/ -o docs/api",
    "build:doc": "run-p build:doc:*",
    "build:server": "npm run clean:server && babel src/ -d dist/ --source-maps --copy-files",
    "build": "run-p build:*",
    "prestart:dev": "eslint --fix src/",
    "start:dev": "node --require dotenv/config --require babel-register --require babel-polyfill src/server.js",
    "dev": "nodemon --watch 'src/**/*.js' --exec npm run start:dev"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/septa97/node-boilerplate.git"
  },
  "author": "Jan Charles M. Adona",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/septa97/node-boilerplate/issues"
  },
  "homepage": "https://github.com/septa97/node-boilerplate#readme",
  "devDependencies": {
    "apidoc": "^0.17.6",
    "babel-cli": "^6.24.1",
    "babel-preset-env": "^1.5.1",
    "codecov": "^2.2.0",
    "commitizen": "^2.9.6",
    "cross-env": "^5.0.5",
    "cz-conventional-changelog": "^2.0.0",
    "eslint": "^3.19.0",
    "eslint-config-airbnb-base": "^11.2.0",
    "eslint-config-prettier": "^2.3.0",
    "eslint-plugin-import": "^2.3.0",
    "eslint-plugin-prettier": "^2.1.2",
    "faucet": "0.0.1",
    "husky": "^0.14.3",
    "mkdirp": "^0.5.1",
    "nodemon": "^1.11.0",
    "npm-run-all": "^4.0.2",
    "nyc": "^10.3.2",
    "prettier": "^1.5.3",
    "rimraf": "^2.6.1",
    "tape": "^4.8.0",
    "validate-commit-msg": "^2.12.2"
  },
  "dependencies": {
    "babel-polyfill": "^6.26.0",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.17.2",
    "chalk": "^1.1.3",
    "cors": "^2.8.4",
    "debug": "^2.6.8",
    "dotenv": "^4.0.0",
    "express": "^4.15.3",
    "express-validation": "^1.0.2",
    "helmet": "^3.8.1",
    "http-status": "^1.0.1",
    "joi": "^10.6.0",
    "jsonwebtoken": "^8.0.0",
    "method-override": "^2.3.9",
    "mongoose": "^4.11.9",
    "nodemailer": "^4.1.0",
    "passport": "^0.4.0",
    "passport-jwt": "^3.0.0",
    "passport-local": "^1.0.0",
    "prompt": "^1.0.0",
    "supertest": "^3.0.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
